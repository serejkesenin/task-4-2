<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Width="600" 
        Height="500"
        x:Class="ControlsApplication.MainWindow"
        Title="ControlsApplication">
        
<Grid ShowGridLines="True"
        RowDefinitions="*,*,*"
        ColumnDefinitions="*,*,*">
    <Button Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="2"
            Background="Bisque"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">Button 0,0</Button>
    <Button Grid.Row="1" 
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Background="Cyan"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:Name="Button11"
            Click="Button11_Click">Button 1,1</Button>
    <Button Grid.Row="2"
            Grid.Column="2"
            Background="Violet"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Content="Button 2,2"></Button>
  </Grid>
</Window>